{
  "name": "NHAVKit2",
  "version": "0.0.1",
  "summary": "iOS视频播放、编辑、采集的库",
  "description": "基于苹果原生的AVFoundation框架编写的 iOS视频播放、编辑、采集的库",
  "homepage": "https://github.com/nenhall/NHAVKit2",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "nenhall": "nenhall@126.com"
  },
  "platforms": {
    "ios": "8.0"
  },
  "source": {
    "git": "https://github.com/nenhall/NHAVKit2.git",
    "tag": "0.0.1",
    "submodules": true
  },
  "requires_arc": true,
  "xcconfig": {
    "ENABLE_STRICT_OBJC_MSGSEND": "NO"
  },
  "default_subspecs": [
    "Baseic",
    "Play",
    "Capture"
  ],
  "info_plist": {
    "NSCameraUsageDescription": "Use Camera",
    "NSMicrophoneUsageDescription": "Use Microphone"
  },
  "subspecs": [
    {
      "name": "Baseic",
      "source_files": "NHAVKit2/Baseic/**/*.{h,m}",
      "public_header_files": "NHAVKit2/Baseic/**/*.h",
      "frameworks": [
        "Foundation",
        "UIKit"
      ],
      "prefix_header_contents": [
        "#import <UIKit/UIKit.h>",
        "#import <Foundation/Foundation.h>"
      ]
    },
    {
      "name": "X26xLib",
      "source_files": "NHAVKit2/Library/x264/include/**/*.h",
      "public_header_files": "NHAVKit2/Library/x264/include/**/*.h",
      "header_mappings_dir": "NHAVKit2/Library/x264/include",
      "vendored_libraries": "NHAVKit2/Library/x264/lib/*.a"
    },
    {
      "name": "Play",
      "source_files": "NHAVKit2/Play/**/*.{h,m}",
      "public_header_files": "NHAVKit2/Play/**/*.h",
      "resources": "NHAVKit2/Play/Library/NHPlay.bundle",
      "frameworks": "AVFoundation",
      "dependencies": {
        "NHAVKit2/Baseic": [

        ]
      }
    },
    {
      "name": "Capture",
      "source_files": [
        "NHAVKit2/Capture/**/*.{h,m}",
        "NHAVKit2/Capture/Library/GPUImage/Source/*.h",
        "NHAVKit2/Capture/Library/GPUImage/Source/iOS/*.{h,m}"
      ],
      "resources": "NHAVKit2/Capture/Library/GPUImage/Resources/*.png",
      "public_header_files": [
        "NHAVKit2/Capture/**/*.h",
        "NHAVKit2/Capture/Library/GPUImage/Resources/*.png"
      ],
      "frameworks": [
        "OpenGLES",
        "AVFoundation",
        "VideoToolbox",
        "AudioToolbox"
      ],
      "dependencies": {
        "NHAVKit2/Baseic": [

        ],
        "NHAVKit2/X26xLib": [

        ]
      }
    }
  ]
}
